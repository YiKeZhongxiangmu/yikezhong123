<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.shiping.VideoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/blank"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xin"
            android:layout_toRightOf="@id/img1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lie"
            android:layout_toRightOf="@id/img2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share"
            android:layout_toRightOf="@id/img3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/touxiang"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/video_start"
        android:layout_width="match_parent"
        android:layout_height="300dp"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_height="40dp"
        android:text="女子翻窗裤子被挂在窗户，路人围观"

        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="132143次播放 今天19:15"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img6"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:src="@drawable/bear"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img6"
            android:textSize="20sp"
            android:text="拿起手机速来抢个沙发吧！~"
            />

    </RelativeLayout>


</LinearLayout>